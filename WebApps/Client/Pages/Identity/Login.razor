@page "/Login"

<section class="row">
    <div class="col-md-10 m-auto col-sm-12">
        <div class="card shadow">
            <div class="card-content">
                <img class="card-img-top img-fluid" src="Images/Vectors/Login.svg" alt="Card image cap" style="height: 20rem">
                <div class="card-body">
                    <h4 class="card-title text-center">ورود</h4>
                    <div class="card-content">
                        <LoginForm/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {

    [CascadingParameter]
    public Task<AuthenticationState> Auth { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var user = (await Auth).User;
        if (user.Identity.IsAuthenticated)
            NavigationManager.NavigateTo("/");
    }

}